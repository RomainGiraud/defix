[user]
    name = Romain Giraud
    email = giraud.romain@gmail.com
[color]
    ui = true
[alias]
    st = status
    lg = log --graph --pretty=tformat:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%an %ar)%Creset'
    dt = difftool
    mt = mergetool
    br = branch -avv
[core]
    pager = mless
[push]
    default = upstream
[diff]
    tool = meld
    wordRegex = .
[difftool]
    prompt = false
[merge]
    tool = meld
[pull]
    rebase = preserve
[status]
    showuntrackedfiles = all
