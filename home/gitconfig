[user]
    name = Romain Giraud
[color]
    ui = true
[alias]
    co = commit
    ca = commit --amend
    st = status --short
    stl = stash list
    sts = stash save -u --keep-index
    stp = stash pop --index
    lg = log --graph --pretty=tformat:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%an)%Creset %C(blue)<%cr>%Creset'
    dt = difftool
    dtt = !git dt -- $(git st | tail +2 | fzf --tac --multi | awk '{ print $2}')
    mt = mergetool
    br = branch -avv
    g = grep --extended-regexp --line-number --break --heading
[core]
    pager = mpager
	excludesfile = /home/romain/.gitignore
[push]
    default = upstream
[diff]
    tool = vimdiff
    guitool = gvimdiff
    wordRegex = .
    indentHeuristic = true
    mnemonicprefix = true
[difftool]
    prompt = true
    trustExitCode = true
[merge]
    tool = vimdiff
    guitool = gvimdiff
[pull]
    rebase = preserve
[status]
    showuntrackedfiles = all
[fetch]
    prune = true
[rerere]
    enabled = true
[include]
    path = .gitconfig_local
