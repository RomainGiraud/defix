[colors]
background = #181818
background-alt = #585858
foreground = #fafafa
foreground-alt = #eaeaea

primary = #0892a5
secondary = #fa8334

color1 = ${colors.primary}
color2 = ${colors.secondary}
color3 = #fffd77
color4 = #91a6ff
color5 = #a7d49b

icon = ${colors.color1}

alert = #ffe882

[bar/mainbar]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 28
offset-x = 0
offset-y = 0
radius = 0.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}
icon_color = ${colors.icon}

line-size = 2

border-size = 0
border-color = #bbb

padding-left = 0
padding-right = 0

module-margin-left = 2
module-margin-right = 2

font-0 = "DejaVu Sans:style=regular:size=10;0"
font-1 = "SauceCodePro Nerd Font Mono:style=regular:size=12;0"
font-2 = "Noto Sans Symbols:style=regular:size=12;0"
font-3 = "Noto Sans Symbols2:style=regular:size=12;0"

modules-left = bspwm keyboard xwindow
modules-right = music-title music-prev music-play music-next space pavolume xbacklight battery filesystem date

tray-position = right
tray-padding = 2
tray-transparent = false
tray-maxsize = 16
tray-offset-y = -2

wm-restack = bspwm

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

[module/space]
type = custom/text
content = "   "

[module/keyboard]
type = internal/xkeyboard

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/bspwm]
type = internal/bspwm

pin-workspaces = false

label-dimmed-focused-underline = ${colors.secondary}

ws-icon-0 = term;
ws-icon-1 = code;
ws-icon-2 = web;
ws-icon-3 = mail;
ws-icon-4 = music;
ws-icon-5 = game;
ws-icon-default = 

label-focused-font = 2
label-focused = %icon%
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.primary}
label-focused-padding = 2

label-occupied-font = 2
label-occupied = %icon%
label-occupied-padding = 2

label-urgent-font = 2
label-urgent = %icon%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty-font = 2
label-empty = %icon%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

[module/xbacklight]
type = internal/xbacklight

format = <ramp> <label>

ramp-0 = 🌕
ramp-1 = 🌔
ramp-2 = 🌓
ramp-3 = 🌒
ramp-4 = 🌑
ramp-foreground = ${colors.icon}

[module/filesystem]
type = internal/fs
interval = 60
fixed-values = true

mount-0 = /

format-mounted-prefix = "🖴 "
format-mounted-prefix-foreground = ${colors.icon}
label-mounted = %percentage_used%%

[module/date]
type = internal/date
interval = 5

date =
date-alt = "%Y-%m-%d "

time = %H:%M
time-alt = %H:%M:%S

format-prefix = "🕛 "
format-prefix-foreground = ${colors.icon}
label = "%date%%time%  "

[module/music-play]
type = custom/script
interval = 0.8
click-left = playerctl play-pause
exec = ~/.config/polybar/mpris.sh play-pause

[module/music-next]
type = custom/script
interval = 0.8
click-left = playerctl next
exec = ~/.config/polybar/mpris.sh next

[module/music-prev]
type = custom/script
interval = 0.8
click-left = playerctl previous
exec = ~/.config/polybar/mpris.sh prev

[module/music-title]
type = custom/script
interval = 0.5
label = %output:0:45:...%
exec = ~/.config/polybar/mpris.sh title
#click-left = playerctl previous
#click-middle = playerctl play-pause
#click-right = playerctl next

[module/volume]
type = internal/volume

master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default

format-volume = <ramp-volume> <label-volume>
ramp-volume-foreground = ${root.foreground}

label-muted = 🔇
label-muted-foreground = #66

ramp-volume-0 = 🔈
ramp-volume-1 = 🔉
ramp-volume-2 = 🔊

[module/pavolume]
type = custom/script
tail = true
label = %output%
exec = ~/.config/polybar/pavolume.sh --listen
click-right = exec pavucontrol&
click-left = ~/.config/polybar/pavolume.sh --togmute
scroll-up = ~/.config/polybar/pavolume.sh --up
scroll-down = ~/.config/polybar/pavolume.sh --down

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 99

format-charging = <animation-charging> <label-charging>
format-charging-foreground = ${colors.icon}

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-foreground = ${colors.icon}

format-full = <ramp-capacity> <label-full>

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.icon}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.icon}
animation-charging-framerate = 750

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
;margin-bottom = 5

